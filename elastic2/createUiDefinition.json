{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "userName",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "User name",
        "defaultValue": "changeME_userName",
        "toolTip": "Admin username for the virtual machines.",
        "constraints": {
          "required": true
        },
        "osPlatform": "Linux"
      },
      {
        "name": "credentials",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type",
          "password": "Password",
          "confirmPassword": "Confirm password",
          "sshPublicKey": "SSH public key"
        },
        "toolTip": {
          "authenticationType": "Choose Authentication type Password or PublicKey(SSH).",
          "password": "Admin password for the virtual machines.",
          "sshPublicKey": "Copy Public key into field."
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": false
        },
        "osPlatform": "Linux"
      }
    ],
    "steps": [
      {
        "name": "elasticsearchStep",
        "label": "Elastic Cluster Settings",
        "subLabel": {
          "preValidation": "Required",
          "postValidation": "Done"
        },
        "bladeTitle": "Deployment Settings",
        "elements": [
          {
            "name": "version",
            "type": "Microsoft.Common.DropDown",
            "label": "Elasticsearch Version",
            "defaultValue": "v2.0.0",
            "toolTip": "TODO",
            "constraints": {
              "allowedValues": [
                {
                  "label": "v2.0.0",
                  "value": "2.0.0"
                },
                {
                  "label": "v2.0.1",
                  "value": "2.0.1"
                }
              ]
            }
          },
          {
            "name": "clusterName",
            "type": "Microsoft.Common.TextBox",
            "label": "Cluster Name",
            "defaultValue": "changeME_clusterName",
            "toolTip": "Name your Elastic Cluster.",
            "constraints": {
              "required": true,
              "validationMessage": "TODO"
            }
          }
        ]
      },
      {
        "name": "shieldStep",
        "label": "Shield Security",
        "subLabel": {
          "preValidation": "Required",
          "postValidation": "Done"
        },
        "bladeTitle": "Elastic User's & Roles",
        "elements": [
          {
            "name": "es_admin",
            "type": "Microsoft.Common.Section",
            "label": "es_admin",
            "elements": [
              {
                "name": "shieldAdminPassword",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                  "password": "Password",
                  "confirmPassword": "Confirm password"
                },
                "toolTip": "Read Write All Indices, Admin Role",
                "constraints": {
                  "required": true
                },
                "options": {
                  "hideConfirmation": false
                }
              }
            ]
          },
          {
            "name": "es_read",
            "type": "Microsoft.Common.Section",
            "label": "es_read",
            "elements": [
              {
                "name": "shieldReadPassword",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                  "password": "Password",
                  "confirmPassword": "Confirm password"
                },
                "toolTip": "Read Only All Indices, Read Only Role",
                "constraints": {
                  "required": true
                },
                "options": {
                  "hideConfirmation": false
                }
              }
            ]
          },
          {
            "name": "es_kibana",
            "type": "Microsoft.Common.Section",
            "label": "es_kibana",
            "elements": [
              {
                "name": "shieldKibanaPassword",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                  "password": "Password",
                  "confirmPassword": "Confirm password"
                },
                "toolTip": "Kibana Access Role",
                "constraints": {
                  "required": true
                },
                "options": {
                  "hideConfirmation": false
                }
              }
            ]
          }
        ]
      },
      {
        "name": "externalAccessStep",
        "label": "External access",
        "subLabel": {
          "preValidation": "Required",
          "postValidation": "Done"
        },
        "bladeTitle": "External Access Control",
        "elements": [
          {
            "name": "provisionJumpbox",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Create a Jumpbox: Internal Access",
            "defaultValue": "yes",
            "toolTip": "Create a Jump box for cluster infrastructure access, admin services",
            "constraints": {
              "allowedValues": [
                {
                  "label": "Yes",
                  "value": "yes"
                },
                {
                  "label": "No",
                  "value": "no"
                }
              ]
            }
          },
          {
            "name": "externalLoadBalancer",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Loadbalancer",
            "defaultValue": "internal",
            "toolTip": "Public or Internal, Load Balancer Network Access, for Kibana or Data Nodes.",
            "constraints": {
              "allowedValues": [
                {
                  "label": "Internal",
                  "value": "internal"
                },
                {
                  "label": "External",
                  "value": "external"
                }
              ]
            }
          },
          {
            "name": "provisionKibana",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Provision a Kibana Instance",
            "defaultValue": "yes",
            "toolTip": "Yes, to create a ??single?? Kibana Instance. ",
            "constraints": {
              "allowedValues": [
                {
                  "label": "Yes",
                  "value": "yes"
                },
                {
                  "label": "No",
                  "value": "no"
                }
              ]
            }
          }
        ]
      },
      {
        "name": "nodesStep",
        "label": "Nodes",
        "subLabel": {
          "preValidation": "Required",
          "postValidation": "Done"
        },
        "bladeTitle": "Cluster Node Types",
        "elements": [
          {
            "name": "vmMasterNodes",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Master Node VM Size",
            "toolTip": "Choose VM SKU, Standard D1, D2, D3",
            "defaultValue": "Standard_D1",
            "recommendedSizes": [
              "Standard_D1",
              "Standard_D2",
              "Standard_D3"
            ],
            "constraints": {
              "allowedSizes": [],
              "excludedSizes": []
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "Canonical",
              "offer": "UbuntuServer",
              "sku": "14.04.2-LTS",
              "version": "latest"
            },
            "count": "3"
          },
          {
            "name": "vmCountDataNodes",
            "type": "Microsoft.Common.TextBox",
            "label": "Number of data nodes",
            "defaultValue": "3",
            "toolTip": "Create x number of Data Nodes",
            "constraints": {
              "required": true,
              "regex": "^[1-9]\\d*$",
              "validationMessage": "Atleast 1 or higher"
            }
          },
          {
            "name": "vmDataNodes",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Data Node VM Size",
            "defaultValue": "Standard_D1",
            "toolTip": "Choose VM SKU, Standard D1, D2, D3",
            "recommendedSizes": [
              "Standard_D1",
              "Standard_D2",
              "Standard_D3"
            ],
            "constraints": {
              "allowedSizes": [],
              "excludedSizes": []
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "Canonical",
              "offer": "UbuntuServer",
              "sku": "14.04.2-LTS",
              "version": "latest"
            },
            "count": "[steps('nodesStep').vmCountDataNodes]"
          },
          {
            "name": "dataNodesAreMasterEligible",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Data nodes are master eligable",
            "defaultValue": "no",
            "toolTip": "TODO",
            "constraints": {
              "allowedValues": [
                {
                  "label": "Yes",
                  "value": "yes"
                },
                {
                  "label": "No",
                  "value": "no"
                }
              ]
            }
          },
          {
            "name": "vmCountClientNodes",
            "type": "Microsoft.Common.TextBox",
            "label": "Number of Client nodes",
            "defaultValue": "3",
            "toolTip": "Create x number of Client Nodes",
            "constraints": {
              "required": true,
              "regex": "^[1--9]\\d*$",
              "validationMessage": "Atleast 1 or higher"
            }
          },
          {
            "name": "vmClientNodes",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Client Node VM Size",
            "toolTip": "Choose VM SKU, Standard D1, D2, D3",
            "recommendedSizes": [
              "Standard_D1",
              "Standard_D2",
              "Standard_D3"
            ],
            "constraints": {
              "allowedSizes": [],
              "excludedSizes": []
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "Canonical",
              "offer": "UbuntuServer",
              "sku": "14.04.2-LTS",
              "version": "latest"
            },
            "count": "[steps('nodesStep').vmCountClientNodes]"
          }
        ]
      }
    ],
    "outputs": {}
  }
}