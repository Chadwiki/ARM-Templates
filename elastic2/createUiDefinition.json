{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "userName",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "User name",
        "defaultValue": "",
        "toolTip": "TODO",
        "constraints": {
          "required": true
        },
        "osPlatform": "Linux"
      },
      {
        "name": "credentials",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type",
          "password": "Password",
          "confirmPassword": "Confirm password",
          "sshPublicKey": "SSH public key"
        },
        "toolTip": {
          "authenticationType": "TODO",
          "password": "TODO",
          "sshPublicKey": "TODO"
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": false
        },
        "osPlatform": "Linux"
      }
    ],
    "steps": [
      {
        "name": "elasticsearchStep",
        "label": "Elasticsearch",
        "subLabel": {
          "preValidation": "TODO",
          "postValidation": "Done"
        },
        "bladeTitle": "Elasticsearch",
        "elements": [
          {
            "name": "version",
            "type": "Microsoft.Common.DropDown",
            "label": "Elasticsearch Version",
            "defaultValue": "v2.0.0",
            "toolTip": "TODO",
            "constraints": {
              "allowedValues": [
                {
                  "label": "v2.0.0",
                  "value": "2.0.0"
                }
              ]
            }
          },
          {
            "name": "clusterName",
            "type": "Microsoft.Common.TextBox",
            "label": "Cluster Name",
            "toolTip": "TODO",
            "constraints": {
              "required": true,
              "validationMessage": "TODO"
            }
          }
        ]
      },
      {
        "name": "shieldStep",
        "label": "Shield",
        "subLabel": {
          "preValidation": "TODO",
          "postValidation": "Done"
        },
        "bladeTitle": "Shield",
        "elements": [
          {
            "name": "es_admin",
            "type": "Microsoft.Common.Section",
            "label": "es_admin",
            "elements": [
              {
                "name": "shieldAdminPassword",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                  "password": "Password",
                  "confirmPassword": "Confirm password"
                },
                "toolTip": "TODO",
                "constraints": {
                  "required": true
                },
                "options": {
                  "hideConfirmation": false
                }
              }
            ]
          },
          {
            "name": "es_read",
            "type": "Microsoft.Common.Section",
            "label": "es_read",
            "elements": [
              {
                "name": "shieldReadPassword",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                  "password": "Password",
                  "confirmPassword": "Confirm password"
                },
                "toolTip": "TODO",
                "constraints": {
                  "required": true
                },
                "options": {
                  "hideConfirmation": false
                }
              }
            ]
          },
          {
            "name": "es_kibana",
            "type": "Microsoft.Common.Section",
            "label": "es_kibana",
            "elements": [
              {
                "name": "shieldKibanaPassword",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                  "password": "Password",
                  "confirmPassword": "Confirm password"
                },
                "toolTip": "TODO",
                "constraints": {
                  "required": true
                },
                "options": {
                  "hideConfirmation": false
                }
              }
            ]
          }
        ]
      },
      {
        "name": "externalAccessStep",
        "label": "External access",
        "subLabel": {
          "preValidation": "TODO",
          "postValidation": "Done"
        },
        "bladeTitle": "No",
        "elements": [
              {
                "name": "externalLoadBalancer",
                "type": "Microsoft.Common.OptionsGroup",
                "label": "Loadbalancer",
                "defaultValue": "internal",
                "toolTip": "TODO",
                "constraints": {
                  "allowedValues": [
                    {
                      "label": "Internal",
                      "value": "internal"
                    },
                    {
                      "label": "External",
                      "value": "external"
                    }
                  ]
                }
              },

              {
                "name": "provisionKibana",
                "type": "Microsoft.Common.OptionsGroup",
                "label": "Kibana",
                "defaultValue": "yes",
                "toolTip": "TODO",
                "constraints": {
                  "allowedValues": [
                    {
                      "label": "Yes",
                      "value": "yes"
                    },
                    {
                      "label": "No",
                      "value": "no"
                    }
                  ]
                }
              },

              {
                "name": "provisionJumpbox",
                "type": "Microsoft.Common.OptionsGroup",
                "label": "Jumpbox",
                "defaultValue": "no",
                "toolTip": "TODO",
                "constraints": {
                  "allowedValues": [
                    {
                      "label": "Yes",
                      "value": "yes"
                    },
                    {
                      "label": "No",
                      "value": "no"
                    }
                  ]
                }
              }
        ]
      },
      {
        "name": "nodesStep",
        "label": "Nodes",
        "subLabel": {
          "preValidation": "TODO",
          "postValidation": "Done"
        },
        "bladeTitle": "No",
        "elements": [
             {
                "name": "vmMasterNodes",
                "type": "Microsoft.Compute.SizeSelector",
                "label": "Master Node VM Size",
                "toolTip": "",
                "recommendedSizes": [
                  "Standard_D1",
                  "Standard_D2",
                  "Standard_D3"
                ],
                "constraints": {
                  "allowedSizes": [],
                  "excludedSizes": []
                },
                "osPlatform": "Linux",
                "imageReference": {
                  "publisher": "Canonical",
                  "offer": "UbuntuServer",
                  "sku": "14.04.2-LTS",
                  "version": "latest"
                },
                "count": "3"
              },


              {
                "name": "vmCountDataNodes",
                "type": "Microsoft.Common.TextBox",
                "label": "Number of data nodes",
                "defaultValue": "3",
                "toolTip": "TODO",
                "constraints": {
                  "required": true,
                  "regex": "^[1-9]\\d*$",
                  "validationMessage": "Atleast 1 or higher"
                }
              },
              {
                "name": "vmDataNodes",
                "type": "Microsoft.Compute.SizeSelector",
                "label": "Data Node VM Size",
                "toolTip": "",
                "recommendedSizes": [
                  "Standard_D1",
                  "Standard_D2",
                  "Standard_D3"
                ],
                "constraints": {
                  "allowedSizes": [],
                  "excludedSizes": []
                },
                "osPlatform": "Linux",
                "imageReference": {
                  "publisher": "Canonical",
                  "offer": "UbuntuServer",
                  "sku": "14.04.2-LTS",
                  "version": "latest"
                },
                "count": "[steps('nodesStep').vmCountDataNodes]"
              },
              {
                "name": "dataNodesAreMasterEligible",
                "type": "Microsoft.Common.OptionsGroup",
                "label": "Data nodes are master eligable",
                "defaultValue": "no",
                "toolTip": "TODO",
                "constraints": {
                  "allowedValues": [
                    {
                      "label": "Yes",
                      "value": "yes"
                    },
                    {
                      "label": "No",
                      "value": "no"
                    }
                  ]
                }
              },

              {
                "name": "vmCountClientNodes",
                "type": "Microsoft.Common.TextBox",
                "label": "Number of client nodes",
                "defaultValue": "3",
                "toolTip": "TODO",
                "constraints": {
                  "required": true,
                  "regex": "^[1-9]\\d*$",
                  "validationMessage": "Atleast 1 or higher"
                }
              },
              {
                "name": "vmClientNodes",
                "type": "Microsoft.Compute.SizeSelector",
                "label": "Client Node VM Size",
                "toolTip": "",
                "recommendedSizes": [
                  "Standard_D1",
                  "Standard_D2",
                  "Standard_D3"
                ],
                "constraints": {
                  "allowedSizes": [],
                  "excludedSizes": []
                },
                "osPlatform": "Linux",
                "imageReference": {
                  "publisher": "Canonical",
                  "offer": "UbuntuServer",
                  "sku": "14.04.2-LTS",
                  "version": "latest"
                },
                "count": "[steps('nodesStep').vmCountClientNodes]"
              }

        ]
      }
    ],
    "outputs": {
      "esVersion": "[steps('elasticsearchStep').version]",
      "esClusterName": "[steps('elasticsearchStep').clusterName]",

      "loadBalancerType": "[steps('externalAccesStep').externalLoadBalancer]",
      "esPlugins": "Yes",
      "kibana": "[steps('externalAccesStep').provisionKibana]",
      "jumpbox": "[steps('externalAccesStep').provisionJumpbox]",

      "vmSizeDataNodes": "[steps('nodesStep').vmDataNodes]",
      "vmDataNodeCount": "[steps('nodesStep').vmCountDataNodes]",
      "dataNodesAreMasterEligble": "[steps('nodesStep').dataNodesAreMasterEligible]",
      "vmSizeMasterNodes": "[steps('nodesStep').vmMasterNodes]",
      "vmClientNodeCount": "[steps('nodesStep').vmClientNodes]",
      "vmSizeClientNodes": "[steps('nodesStep').vmCountClientNodes]",

      "adminPassword": "[basics('credentials')",
      "adminUsername": "[basics('userName')",
      "shieldAdminPassword": "[steps('shieldStep').es_admin.shieldAdminPassword",
      "shieldReadPassword": "[steps('shieldStep').es_admin.shieldReadPassword",
      "shieldKibanaPassword": "[steps('shieldStep').es_admin.shieldKibanaPassword",

      "location": "[location()]",
      "virtualNetworkName" : "esvnet"
    }
  }
}
